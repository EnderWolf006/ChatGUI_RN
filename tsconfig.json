{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // 让 TypeScript 识别 @ 别名
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
  },
  "resolveJsonModule": true,
  "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
